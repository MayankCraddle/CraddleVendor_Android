<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@color/full_transparent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_centerInParent="true"

        android:background="@drawable/rac_rounded"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_cancel_dailog"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"
            />
        <LinearLayout
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/tv_manage_cate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Order State"
                android:textSize="@dimen/_12sdp"
                />

            <TextView
                android:id="@+id/tv_reject_reason"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Do you want to change the state from Payment_Completed to Confirmed for this item"
                android:textSize="@dimen/_11sdp"
                />
            <RelativeLayout
                android:id="@+id/rele_ok"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="@drawable/rac_rounded_green">
                <com.cradlevendor.customui.CustomTextviewBold
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_Ok"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:layout_height="match_parent"
                    android:text="Ok"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/tv_cancel"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textAlignment="center"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Ok"
                    android:background="@drawable/rac_top_corner_rounded_grey"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>